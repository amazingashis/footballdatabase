<% include includes/header.ejs %>

        <h2>ADD TEAM:</h2>
        <% if (err !== null) { %>
            <div class="alert alert-danger alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= err %></strong>
            </div>
            <% } %>
            <% if (msg !== null) { %>
            <div class="alert alert-info alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= msg %></strong>
            </div>
            <% } %>
        <form action="/dashboard/postteam" method="POST" id="post-item-form">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Club_id">Club ID: </label>
                        <input type="text" class="form-control" name="Club_id" >
                    </div>
                    <div class="form-group">
                        <label for="type">Club Name:</label>
                        <input type="Club_name" class="form-control" name="Club_name" placeholder="Club_name" required>
                    </div>
                    <div class="form-group">
                        <label for="No_Of_Game_Played">Games Played:</label>
                        <input type="text" class="form-control" name="No_Of_Game_Played" placeholder="in no" required>
                    </div>
                    <div class="form-group">
                        <label for="No_Of_Gamewon">Games won:</label>
                        <input type="text" class="form-control" name="No_Of_Gamewon" placeholder="in no" required>
                    </div>
                    <div class="form-group">
                        <label for="No_Of_Gamelossed">Games Lose:</label>
                        <input type="text" class="form-control" name="No_Of_Gamelossed" placeholder="in no" required>
                    </div>
                    <div class="form-group">
                        <label for="Stadium_Name">Stadium Name:</label>
                        <input type="text" class="form-control" name="Stadium_Name" placeholder="Character" required>
                    </div>
                    <div class="form-group">
                        <label for="Manager">Manager:</label>
                        <input type="text" class="form-control" name="Manager" placeholder="Character" required>
                    </div>
                    <button class="btn btn-primary btn-block">
                        Add Team
                    </button>
                </div>
            </div>
        </form>

<% include includes/footer.ejs %>