<% include includes/header.ejs %>

        <h2>Add Sponshors:</h2>
        <% if (err !== null) { %>
            <div class="alert alert-danger alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= err %></strong>
            </div>
            <% } %>
            <% if (msg !== null) { %>
            <div class="alert alert-info alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= msg %></strong>
            </div>
            <% } %>
        <form action="/dashboard/insponshorship" method="POST" id="post-item-form">
            <div class="row">
                <div class="col-md-6">
                    
                    <div class="form-group">
                        <label for="Company_name">Company Name:</label>
                        <input type="text" class="form-control" name="Company_name" required>
                    </div>
                    <div class="form-group">
                        <label for="Club_name">Club Name:</label>
                        <input type="text" class="form-control" name="Club_name" required >
                    </div>
                    <div class="form-group">
                        <label for="Contact_info"> Contact info:</label>
                        <input type="text" class="form-control" name="Contact_info" required>
                    </div>
                    <div class="form-group">
                            <label for="Annual_deal">Annual Deal:</label>
                            <input type="text" class="form-control" name="Annual_deal" placeholder="Money in $" required>
                    </div>
                    
              
                    
                    <button class="btn btn-primary btn-block">
                        Add Details
                    </button>
                </div>
            </div>
        </form>

<% include includes/footer.ejs %>