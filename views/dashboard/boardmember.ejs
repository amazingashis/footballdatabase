<% include includes/header.ejs %>

<h2>Player Info:</h2>


<table class="table table-bordered table-hover">

    <thead class="font-weight-bold">
        <tr>
            <td>Board id</td>
            <td>Name</td>
            <td>DOB</td>
            <td>position</td>
            <td>Years of Service</td>
            <td>Player_id</td>
            
        </tr>
    </thead>
    <tbody>
        <% var i = 1; %>
        <% boardmember.forEach(d=> { %>
            <tr>
                <td style="vertical-align:middle;"><%= d.Club_id; %></td>
                <td style="vertical-align:middle;"><%= d.Name; %></td>
                <td style="vertical-align:middle;"><%= new Date(d.Date_of_birth).toLocaleDateString(); %></td>
                <td style="vertical-align:middle;"><%= d.Position; %></td>
                <td style="vertical-align:middle;"><%= new Date(d.Years_of_active).toLocaleDateString(); %></td>
                <td style="vertical-align:middle;"><%= d.Contact_info; %></td>
                
                
            </tr>
        <% }) %>
    </tbody>
</table>

</div>
