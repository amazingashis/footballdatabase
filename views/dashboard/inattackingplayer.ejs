<% include includes/header.ejs %>

        <h2>Add the Player:</h2>
        <% if (err !== null) { %>
            <div class="alert alert-danger alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= err %></strong>
            </div>
            <% } %>
            <% if (msg !== null) { %>
            <div class="alert alert-info alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= msg %></strong>
            </div>
            <% } %>
        <form action="/dashboard/inattackingplayer" method="POST" id="post-item-form">
            <div class="row">
                <div class="col-md-6">
                    
                    <div class="form-group">
                        <label for="Player_id">Player ID:</label>
                        <input type="text" class="form-control" name="Player_id" placeholder="Id of the club">
                    </div>
                    <div class="form-group">
                        <label for="Goals">Goals:</label>
                        <input type="text" class="form-control" name="Goals" >
                    </div>
                    <div class="form-group">
                        <label for="Assists">Assists:</label>
                        <input type="text" class="form-control" name="Assists" >
                    </div>
  
              
                    
                    <button class="btn btn-primary btn-block">
                        Add Details
                    </button>
                </div>
            </div>
        </form>

<% include includes/footer.ejs %>